_schema-version: "3.1"
ID: girovisite
description: Gestione giro visite
version: 1.0.0
modules:
  - name: girovisite-srv
    type: nodejs
    path: gen/srv
    requires:
      - name: girovisite-service-db
      - name: girovisite-service-destination
      - name: girovisite-service-uaa
      - name: girovisite-service-autoscaler
        parameters:
          path: ./autoscaler.json
    provides:
      - name: srv-api
        properties:
          srv-url: ${default-url}
    parameters:
      buildpack: nodejs_buildpack
    build-parameters:
      builder: npm
    properties:
      OPTIMIZE_MEMORY: "true"
  - name: girovisite-db-deployer
    type: hdb
    path: gen/db
    requires:
      - name: girovisite-service-db
    parameters:
      buildpack: nodejs_buildpack
  - name: girovisite-destination-content
    type: com.sap.application.content
    requires:
      - name: girovisite-service-destination
        parameters:
          content-target: true
      - name: girovisite-service-html
        parameters:
          service-key:
            name: girovisite-service-html-key
      - name: girovisite-service-uaa
        parameters:
          service-key:
            name: girovisite-uaa-key
    parameters:
      content:
        instance:
          destinations:
            - Name: girovisite-service-html
              ServiceInstanceName: girovisite-html5-srv
              ServiceKeyName: girovisite-service-html-key
              sap.cloud.service: girovisite
            - Authentication: OAuth2UserTokenExchange
              Name: girovisite-service-uaa
              ServiceInstanceName: girovisite-uaa
              ServiceKeyName: girovisite-uaa-key
              sap.cloud.service: girovisite
          existing_destinations_policy: ignore
    build-parameters:
      no-source: true
  - name: girovisite-service-app-content
    type: com.sap.application.content
    path: .
    requires:
      - name: girovisite-service-html
        parameters:
          content-target: true
    build-parameters:
      build-result: resources
      requires:
        - artifacts:
            - girovisitefrontend.zip
          name: girovisitefrontend
          target-path: resources/
  - name: girovisitefrontend
    type: html5
    path: frontend
    build-parameters:
      build-result: dist
      builder: custom
      commands:
        - npm install
        - npm run build:cf
      supported-platforms: []
resources:
  - name: girovisite-service-db
    type: com.sap.xs.hdi-container
    parameters:
      service: hana
      service-name: girovisite-db
      service-plan: hdi-shared
  - name: girovisite-service-destination
    type: org.cloudfoundry.managed-service
    parameters:
      config:
        HTML5Runtime_enabled: true
        init_data:
          instance:
            destinations:
              - Authentication: NoAuthentication
                Name: ui5
                ProxyType: Internet
                Type: HTTP
                URL: https://ui5.sap.com
            existing_destinations_policy: update
        version: 1.0.0
      service: destination
      service-name: girovisite-service-destination
      service-plan: lite
  - name: girovisite-service-autoscaler
    type: org.cloudfoundry.managed-service
    parameters:
      service: autoscaler
      service-plan: standard
  - name: girovisite-service-html
    type: org.cloudfoundry.managed-service
    parameters:
      service: html5-apps-repo
      service-name: girovisite-html5-srv
      service-plan: app-host
  - name: girovisite-service-uaa
    type: org.cloudfoundry.managed-service
    parameters:
      path: ./xs-security.json
      service: xsuaa
      service-name: girovisite-uaa
      service-plan: application
parameters:
  deploy_mode: html5-repo
  enable-parallel-deployments: true
build-parameters:
  before-all:
    - builder: custom
      commands:
        - npm install
        - npx cds build --production
        - npx rimraf gen/db/src/gen/data