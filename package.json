{
  "name": "girovisite",
  "version": "1.0.0",
  "description": "GiroVisite app with BackEnd and FrontEnd",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/http-client": "^3.23.0",
    "@sap-cloud-sdk/util": "^3.23.0",
    "@sap/cds": "^8",
    "@sap/low-code-event-handler": "^1.2.4",
    "@sap/xsenv": ">=3.3.2 <3.3.3",
    "@sap/xssec": "^4.2.7",
    "express": "^4",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "hdb": "^0.19.10",
    "passport": "^0.7.0",
    "@sap/mdk-tools": "^1.3.1"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.7.0",
    "@cap-js/sqlite": "^1",
    "@sap/dev-cap-tools": "^1.31.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-frontend": "cds watch --open frontend/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy girovisite --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "auth": "xsuaa",
      "db": "hana",
      "odataS4_V2": {
        "kind": "odata-v2",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "S4_HANA"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/frontend"
  ]
}
